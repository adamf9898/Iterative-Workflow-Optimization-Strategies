  "principles": [
    {
      "id": "modularity",
      "name": "Modularity",
      "order": 1,
      "description": "Workflows are decomposed into independent, interchangeable modules",
      "benefits": [
        "Developed independently",
        "Tested in isolation",
        "Reused across different contexts",
        "Easily modified without affecting other components"
      ]
    },
    {
      "id": "cyclical-iteration",
      "name": "Cyclical Iteration",
      "order": 2,
      "description": "Each workflow follows a Plan-Do-Check-Act (PDCA) cycle",
      "steps": [
        {
          "name": "Plan",
          "description": "Define objectives and processes"
        },
        {
          "name": "Do",
          "description": "Implement the plan on a small scale"
        },
        {
          "name": "Check",
          "description": "Measure and analyze results"
        },
        {
          "name": "Act",
          "description": "Refine and standardize successful changes"
        }
      ]
    },
    {
      "id": "incremental-progress",
      "name": "Incremental Progress",
      "order": 3,
      "description": "Tasks are broken into small iterations",
      "characteristics": [
        "Deliver measurable value quickly",
        "Allow for rapid feedback",
        "Reduce risk through frequent validation",
        "Enable adaptive planning"
      ]
    },
    {
      "id": "continuous-improvement",
      "name": "Continuous Improvement",
      "order": 4,
      "description": "Workflows evolve through systematic refinement",
      "methods": [
        "Regular retrospectives",
        "Data-driven decision making",
        "Knowledge sharing and documentation",
        "Systematic identification of bottlenecks"
      ]
    }
  ],
